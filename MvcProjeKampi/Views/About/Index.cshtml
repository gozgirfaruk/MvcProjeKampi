﻿@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>

<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">

        <div class="container-fluid">


        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">

            <div class="card-header">
                @Html.Action("AboutPartial", "About")
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Alt Metin
                            </th>
                            <th style="width: 30%">
                                Ana Metin
                            </th>
                            <th style="width: 30%">
                                Ana Sayfa Resmi
                            </th>
                            <th style="width: 8%" class="text-center">
                                Eklenti Resmi
                            </th>
                            <td>Güncelle</td>
                            <td>Sil</td>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @item.AboutID
                                </td>
                                <td>
                                    @item.SmallDetail
                                </td>
                                <td>
                                    <a>
                                        @item.BigDetail
                                    </a>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.ImageUrlOne">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.ImageUrlTwo">
                                        </li>
                                    </ul>
                                </td>
                                <td><a href="#" class="btn btn-outline-danger">Pasifleştir</a></td>
                                <td><a href="/About/Delete/@item.AboutID" class="btn btn-outline-success">Aktifleştir</a></td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

