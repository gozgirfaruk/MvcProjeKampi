﻿@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
@using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post))
{
    <body class="hold-transition sidebar-mini">

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">

                            <form role="form">
                                <div class="card-body">

                                    <div class="form-group">
                                        <label>Yazar Adı</label>
                                        @Html.TextBoxFor(x => x.WriterID, new { @type = "hidden" })

                                    </div>
                                    <div class="form-group">
                                        <label>Yazar Adı</label>
                                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.FirstName)
                                    </div>
                                    <div class="form-group">
                                        <label>Yazar Soyadı</label>
                                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.LastName)
                                    </div>
                                    <div class="form-group">
                                        <label>e-Posta</label>
                                        @Html.TextBoxFor(x => x.eMail, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Avatar</label>
                                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Yazar Hakkında</label>
                                        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        <label>Şifre</label>
                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                                    </div>

                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button class="btn btn-primary">Değişiklikleri Uygula</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>

    </body>
}
</html>